.guide-box {
	padding: 30rpx;
}
.guide-item {
	margin-bottom: 30rpx;
}
.guide-item image {
	width: 100%;
	margin-bottom: 16rpx;
}
.guide-item .h3 {
  display: block;
	font-size: 48rpx;
	color: #FF5A5D;
	height: 66rpx;
	line-height: 66rpx;
	margin-bottom: 15rpx;
	padding-left: 60rpx;
	background:  url('data:image/png;base64,') left center no-repeat;
}
.guide-item .p {
	color: #4F4F53;
	font-size: 28rpx;
	margin-bottom: 10rpx;
}
.guide-item .p text {
	display: inline-block;
	width: 32rpx;
	height: 32rpx;
	line-height: 32rpx;
	text-align: center;
	color: #fff;
	background: url('data:image/png;base64,') no-repeat;
	margin-right: 10rpx;
}