page {
  background-color: #f5f5f5;
  padding-top: 165rpx;
}

.header-fixed {
  width: 100%;
  position: fixed;
  left: 0;
  top: 0;
  background-color: #fff;
  z-index: 10;
}

.weui-search-bar {
  border-bottom: 1rpx solid #e0e0e0;
}

.page__bd {
  background-color: #fff;
}

.weui-search-bar__cancel-btn {
  font-size: 32rpx;
}

.nav-list {
  width: 100%;
  height: 70rpx;
  line-height: 70rpx;
  border-bottom: 1rpx solid #e0e0e0;
}

.nav-list-box {
  white-space: nowrap;
  display: flex;
}

.nav-list-item {
  display: inline-block;
  padding: 0 20rpx;
  font-size: 28rpx;
  color: #666;
}

.nav-list-item.selected {
  position: relative;
  color: #ff5a5d;
}

.nav-list-item.selected::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  width: 40rpx;
  height: 0;
  margin-left: -20rpx;
  border-bottom: 2px solid #ff5a5d;
}

.item-list {
  background-color: #fff;
  margin-top: 20rpx;
}

.weui-media-box__title {
  font-size: 28rpx;
  margin-bottom: 4rpx;
}

.weui-media-box__desc {
  -webkit-line-clamp: 1;
  display: block;
}

.ps-price {
  font-size: 28rpx;
  color: #ff5a5d;
  margin-bottom: 10rpx;
}

.ps-price .span {
  font-size: 24rpx;
  color: #a2a2a2;
  text-decoration: line-through;
  margin-left: 10rpx;
}

.weui-media-box__hd_in-appmsg {
  width: 192rpx;
  height: 192rpx;
}

.weui-media-box {
  position: relative;
}

button.share-btn {
  position: absolute;
  right: 30rpx;
  bottom: 30rpx;
  padding: 3rpx 30rpx;
  background-color: #ff5a5d!important;
  color: #fff;
  font-size: 28rpx;
  border-radius: 2px;
  cursor: pointer;
  line-height: 64rpx;
}